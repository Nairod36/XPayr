# XPayr Backend Configuration Template
# Copy this file to .env and fill in your actual values

# ===== SERVER CONFIGURATION =====
PORT=3000
NODE_ENV=development
CORS_ORIGIN=*

# ===== CIRCLE CCTP CONFIGURATION =====
# Get your API key from: https://console.circle.com/
CIRCLE_API_KEY=your_circle_api_key_here

# API URL (sandbox for development, production for mainnet)
CIRCLE_API_URL=https://iris-api-sandbox.circle.com
# CIRCLE_API_URL=https://iris-api.circle.com  # For production

# Timeout and retry settings
CIRCLE_TIMEOUT=600000
CIRCLE_RETRY_ATTEMPTS=5
CIRCLE_RETRY_DELAY=15000

# ===== BLOCKCHAIN PRIVATE KEYS =====
# Use testnet private keys for development
# NEVER commit real private keys to version control

ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_here
BASE_PRIVATE_KEY=your_base_private_key_here
AVALANCHE_PRIVATE_KEY=your_avalanche_private_key_here
ARBITRUM_PRIVATE_KEY=your_arbitrum_private_key_here
POLYGON_PRIVATE_KEY=your_polygon_private_key_here

# ===== RPC CONFIGURATION =====
# Optional - defaults are provided for testnets

# Ethereum Sepolia (get Infura key from: https://infura.io/)
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/your_infura_key
# Alternative: ETHEREUM_RPC_URL=https://rpc.sepolia.etherscan.io

# Base Sepolia
BASE_RPC_URL=https://sepolia.base.org

# Avalanche Fuji
AVALANCHE_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc

# Arbitrum Sepolia  
ARBITRUM_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

# Polygon Mumbai
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com

# ===== LAYERZERO CONFIGURATION =====
# LayerZero endpoints for cross-chain messaging
LZ_ENDPOINT_SEPOLIA=0x6EDCE65403992e310A62460808c4b910D972f10f
LZ_ENDPOINT_BASE_SEPOLIA=0x6EDCE65403992e310A62460808c4b910D972f10f
LZ_READ_CHANNEL_ID=40217

# ===== SECURITY CONFIGURATION =====
# Rate limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in ms
RATE_LIMIT_MAX=100        # Max requests per window

# API key authentication (optional)
REQUIRE_API_KEY=false
VALID_API_KEYS=key1,key2,key3  # Comma-separated list

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=info     # debug, info, warn, error
LOG_FORMAT=combined
LOG_FILE=         # Optional log file path

# ===== DATABASE CONFIGURATION =====
# Optional - for future features
DATABASE_URL=
DB_MAX_CONNECTIONS=10

# ===== FEATURE FLAGS =====
ENABLE_LEGACY_API=true   # Enable backward compatibility endpoints
ENABLE_METRICS=false     # Enable metrics collection
ENABLE_SWAGGER=false     # Enable Swagger documentation
ENABLE_CCTP_V2=true      # Enable enhanced CCTP features

# ===== DEVELOPMENT/TESTING =====
# Test configurations for CI/CD
TEST_CIRCLE_API_KEY=your_test_api_key
TEST_PRIVATE_KEY=your_test_private_key

# Mock settings for testing
MOCK_CIRCLE_API=false
MOCK_BLOCKCHAIN_CALLS=false
